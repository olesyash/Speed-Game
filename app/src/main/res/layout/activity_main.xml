<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/secondButtonString"
        android:id="@+id/secondButton"
        android:layout_marginStart="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15sp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/firstButtonString"
        android:id="@+id/firstButton"
        android:layout_marginEnd="40dp"
        android:layout_alignTop="@+id/secondButton"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15sp" />

    <TextView
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:text="@string/timerTextViewString"
        android:id="@+id/timerTextView"
        android:layout_marginTop="50dp"
        android:background="#0100c7"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_below="@+id/firstButton"
        android:layout_alignStart="@+id/bestTimeTextView2" />

    <TextView
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:text="@string/bestTimeTextViewString"
        android:id="@+id/bestTimeTextView2"
        android:background="#0100c7"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="15sp"
        android:textIsSelectable="true"
        android:layout_below="@+id/timerTextView"
        android:layout_alignEnd="@+id/firstButton"
        android:layout_marginTop="41dp" />
</RelativeLayout>
